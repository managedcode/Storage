<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <IsPackable>true</IsPackable>
        <OutputType>Library</OutputType>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <!--NuGet-->
    <PropertyGroup>
        <Title>ManagedCode.Storage.Client.SignalR</Title>
        <PackageId>ManagedCode.Storage.Client.SignalR</PackageId>
        <Description>SignalR client for ManagedCode.Storage streaming and transfer operations.</Description>
        <PackageTags>managedcode, storage, signalr, streaming, upload, download</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\ManagedCode.Storage.Core\ManagedCode.Storage.Core.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="ManagedCode.MimeTypes" Version="1.0.3" />
        <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="8.0.8" />
        <PackageReference Include="Microsoft.AspNetCore.Http.Connections.Client" Version="8.0.8" />
    </ItemGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

</Project>
